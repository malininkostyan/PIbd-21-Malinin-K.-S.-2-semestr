@using AbstractFlowerShopServiceDAL.BindingModel
@model AbstractFlowerShopServiceDAL.ViewModel.StorageElementViewModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Добавление элемента</h2>

    
@using (Html.BeginForm("AddElementPost", "AddElementStorage", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>StorageElementViewModel</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.StorageId, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col md-10">
                @Html.DropDownList("StorageId", ViewBag.Storages as SelectList)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.ElementName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col md-10">
                @Html.DropDownList("ElementId", ViewBag.Element as SelectList)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Amount, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Amount, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Amount, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}